{
  "$jsonSchema": {
    "bsonType": "object",
    "required": ["torrentId", "userId", "text", "rating", "createdAt"],
    "properties": {
      "torrentId": { "bsonType": "objectId" },
      "userId": { "bsonType": "objectId" },
      "text": { "bsonType": "string", "maxLength": 160 },
      "rating": {
        "bsonType": "int",
        "minimum": 1,
        "maximum": 5
      },
      "createdAt": { "bsonType": "date" },
      "updatedAt": { "bsonType": ["date", "null"] }
    }
  }
}
